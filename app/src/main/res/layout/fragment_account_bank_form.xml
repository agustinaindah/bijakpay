<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatchLayout">

    <RelativeLayout
        style="@style/MatchMatchLayout"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardAccountBank"
            style="@style/WrapWrapLayout"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <FrameLayout
                android:id="@+id/frAccountBank"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/material_orange"/>

            <RelativeLayout
                style="@style/MatchWrapLayout"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputBankAccountAs"
                    style="@style/TextLabel"
                    android:layout_below="@id/inputPassword">

                    <EditText
                        android:id="@+id/edtBankAccountAs"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="Account as" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputAccountName"
                    style="@style/TextLabel"
                    android:layout_below="@id/inputBankAccountAs">

                    <EditText
                        android:id="@+id/edtAccountName"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="Owner" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputAccountNumber"
                    style="@style/TextLabel"
                    android:layout_below="@id/inputAccountName">

                    <EditText
                        android:id="@+id/edtAccountNumber"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="Account Number"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputBankName"
                    style="@style/TextLabel"
                    android:layout_below="@id/inputAccountNumber">

                    <EditText
                        android:id="@+id/edtBankName"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="Bank Name" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputBranch"
                    style="@style/TextLabel"
                    android:layout_below="@id/inputBankName">

                    <EditText
                        android:id="@+id/edtBranch"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="Branch" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    style="@style/MatchWrapLayout"
                    android:layout_below="@id/inputBranch"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputCodeOTP"
                        style="@style/TextLabel"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edtCodeOTP"
                            style="@style/AppTheme.EditTextMaterial"
                            android:hint="OTP Code" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/btnCodeOTP"
                        style="@style/MatchWrapLayout"
                        android:layout_below="@id/inputCodeOTP"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="Request OTP Code"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnSave"
            style="@style/MatchWrapLayout"
            android:layout_below="@id/cardAccountBank"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="Save Changes"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</ScrollView>