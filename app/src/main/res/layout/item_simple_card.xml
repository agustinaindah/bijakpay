<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardItemSimpleCard"
    android:layout_width="110dp"
    android:layout_height="100dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/layItemSimpleCard"
        style="@style/MatchWrapLayout"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgItemSimpleCard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            android:transitionName="@string/transition_string" />

        <TextView
            android:id="@+id/txtItemSimpleCard"
            style="@style/WrapWrapLayout"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/imgItemSimpleCard"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="lorem ipsum"
            android:textSize="12sp"
            android:textColor="@color/material_blue_grey_800"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>