<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatchLayout">

    <LinearLayout
        style="@style/MatchMatchLayout"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardMessage"
            style="@style/MatchWrapLayout"
            android:layout_marginTop="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/material_amber" />

            <LinearLayout
                style="@style/MatchWrapLayout"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.design.widget.TextInputLayout style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtMessageRecipient"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="Email Penerima"
                        android:inputType="textEmailAddress"/>
                </android.support.design.widget.TextInputLayout>

                <!--<TextView
                    style="@style/AppTheme.Settings.Title"
                    android:paddingLeft="5dp"
                    android:text="@string/recipient_category" />

                <Spinner
                    android:id="@+id/spinRecipientCategory"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/recipient_category"
                    android:spinnerMode="dialog"
                    android:entries="@array/data_category"/>-->

                <android.support.design.widget.TextInputLayout style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtMessageSubject"
                        style="@style/AppTheme.EditTextMaterial"
                        android:hint="Subject " />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtMessageContent"
                        style="@style/AppTheme.EditTextMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:hint="Pesan"
                        android:gravity="start"
                        android:inputType="textMultiLine" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnMessageSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:text="Send"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
