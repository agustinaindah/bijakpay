<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMemberType"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp">

    <RelativeLayout
        style="@style/MatchWrapLayout"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtMemberType"
            style="@style/MatchWrapLayout"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Member Type"
            android:textColor="@color/colorPrimaryDark" />

        <!--<ImageView
            android:id="@+id/btnMemberOptions"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/ic_more_vert" />-->

        <Button
            android:id="@+id/btnUpdateLife"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/txtPriceMember"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:background="@color/btnLife"
            android:padding="5dp"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnUpdateAgen"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/btnAgen"
            android:padding="5dp"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_alignTop="@+id/txtPriceMember"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btnUpdateDealer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/btnDealer"
            android:padding="5dp"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_alignBottom="@+id/txtPriceMember"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />

        <TextView
            android:id="@+id/txtPriceMember"
            style="@style/WrapWrapLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtMemberType"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text="Rp 1000000"
            android:textSize="22sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>